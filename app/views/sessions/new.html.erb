<header class="page-header">
  <h1 style="margin-bottom: 10px;">Login</h1>
</header>

<div>
<p style="margin-bottom: 2em">If you do not already have an account, please <a href="/signup">click here</a> to create one.</p>

<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <%= form_tag '/login' do %>

    <div class="form-group">
    Email: <%= text_field_tag :email,"", class: 'form-control'%>
    </div>
    <br>
    <div class="form-group">
    Password: <%= password_field_tag :password, "", class: 'form-control'%>
    </div>
    <br>
    <div class="form-group">
    <%= submit_tag "Submit", class: 'btn btn-primary' %>
    </div>
    <% end %>
  </div>
</div>

</section>
